@model IEnumerable<Presentation.Models.ViewModels.Ticket.ListTicketViewModel>

@{
    ViewData["Title"] = "ListTickets";
}

<h1>ListTickets</h1>


<table class="table">
    <thead>
        <tr>
            <th hidden
                >
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassportImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cancelled)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td hidden
                    >
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    <img src="@Url.Content(item.PassportImage)" alt="Passport Image" style="width: 20%; height: %;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cancelled)
            </td>
            
                <td style ="text-align: middle;">
                    @if (!item.Cancelled)
                    {
                        <form method="post" action="/Ticket/CancelTicket" onsubmit="return confirm('Are you sure you want to cancel this ticket?
                        There is no return');">
                            <input type="hidden" name="chosenTicketId" value="@item.Id" />
                            <button type="submit" style="background-color: red; border: none; color: white; padding: 5px 10px; cursor: pointer;">Cancel</button>
                        </form>
                    }else
                    {
                        <form method="post" action="/Ticket/DeleteTicket" onsubmit="return confirm('Are you sure you want to remove this ticket from your purchase history??');">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <button type="submit" style="background-color: red; border: none; color: white; padding: 5px 10px; cursor: pointer;">Delete</button>
                        </form>

                    }
            </td>
        </tr>
}
    </tbody>
</table>
