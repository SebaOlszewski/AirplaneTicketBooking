@model IEnumerable<Presentation.Models.ViewModels.Admin.AdminListFlightsViewModel>

@{
    ViewData["Title"] = "AdminListFlights";
}

<h1>List Flights - admin</h1>
<h5>
    @Html.ActionLink("Create a new flight", "CreateFlight", "Flight")
</h5>
<table class="table">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryTo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td hidden>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryTo)
            </td>
            <td>
                    @if (item.seatingList.Count(x => x.isTaken) == item.Rows * item.Columns)
                    {

                        @:Book |

                        
                    }else
                    {
                        @Html.ActionLink("Book", "BookTicket", "Ticket", new { chosenFlightId=item.Id }) @:|
                    }
                    @Html.ActionLink("Details", "FlightDetails", "Flight", new { id = item.Id }) |
                    @Html.ActionLink("Edit flight", "EditFlight", "Flight", new { id = item.Id }) |
                    @Html.ActionLink("List seats info", "AdminListSeats", "Admin", new { chosenFlight = item.Id }) |
                    @Html.ActionLink("Delete flight", "DeleteFlight", "Flight", new { Id = item.Id })
            </td>



                        

                
        </tr>
}
    </tbody>
</table>
