@model Presentation.Models.ViewModels.Admin.AdminListTicketDetailsViewModel

@{
    ViewData["Title"] = "AdminTicketDetails";
}

<h1>AdminTicketDetails</h1>

<div>
    <h4>AdminListTicketDetailsViewModel</h4>
    <hr />
    <dl class="row">
        @{
            foreach(var ticket in Model.ticketList)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => ticket.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Owner)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => ticket.Owner)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PassportImage)
                </dt>
                <dd class="col-sm-10">
                    <img src="@Url.Content(ticket.PassportImage)" alt="Passport Image"/>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PricePaid)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => ticket.PricePaid)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cancelled)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => ticket.Cancelled)
                </dd>
            }
            <br />
            
        }
        
    </dl>
</div>
<div>
    <a asp-action="AdminListFlights">Back to List</a>
</div>
