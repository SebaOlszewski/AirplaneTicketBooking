@model Presentation.Models.ViewModels.Tickets.EditTicketViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EditTicketViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" class="form-control" value="@Model.Id" readonly/>
                
            <div id="grid-container">

                @for (int col = 0; col < Model.maxColumn; col++)
                {
                    for (int row = 0; row < Model.maxRow; row++)
                    {
                        <button class="grid-button" data-row="@row" data-col="@col">
                            <img src="/images/seat.png" style="width:30px;height:30px;" />
                        </button>
                    }
                    <br />
                }
            </div>
            <br />
            <div class="form-group" style="display: none;">
                <label asp-for="FlightFK" class="control-label"></label>
                <input asp-for="FlightFK" class="form-control" readonly/>
                <span asp-validation-for="FlightFK" class="text-danger"></span>
            </div>
            


            <div class="form-group">
                <label asp-for="PassportImage" class="control-label"></label>
                <br />
                <img src="@Model.Image" style="width:100px; height:100px;"/>
                <br />
                

                    <label>Upload Image:</label> <br />
                <span style=" font-size:smaller">(Leave blank to keep an old image)</span>
                <input type="file" name="PassportImage" class="form-control" />



                <span asp-validation-for="PassportImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePaid" class="control-label"></label>
                <input asp-for="PricePaid" class="form-control" />
                <span asp-validation-for="PricePaid" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cancelled" /> @Html.DisplayNameFor(model => model.Cancelled)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListTickets">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var buttons = document.querySelectorAll('.grid-button');
        var rowInput = document.getElementById('rowInput');
        var colInput = document.getElementById('colInput');
        var selectedSeatRow = @Model.Row; // Assuming Row is an integer
        var selectedSeatColumn = @Model.Column; // Assuming Column is an integer
        var selectedButton = null;

        buttons.forEach(function (button) {
            var row = button.getAttribute('data-row');
            var col = button.getAttribute('data-col');

            // Set the initial image for the selected seat
            if (row == selectedSeatRow && col == selectedSeatColumn) {
                button.classList.add('selected');
                button.innerHTML = '<img src="/images/taken_seat.jpg" style="width:30px;height:30px;" />';
                selectedButton = button;
            }

            button.addEventListener('click', function (event) {
                event.preventDefault();

                rowInput.value = row;
                colInput.value = col;

                // Reset the image for all buttons
                buttons.forEach(function (btn) {
                    btn.classList.remove('selected');
                    btn.innerHTML = '<img src="/images/seat.png" style="width:30px;height:30px;" />';
                });

                // Change the image of the clicked button
                this.classList.add('selected');
                this.innerHTML = '<img src="/images/taken_seat.jpg" style="width:30px;height:30px;" />';

                // Set the current button as the selectedButton
                selectedButton = this;
            });
        });
    });
</script>
