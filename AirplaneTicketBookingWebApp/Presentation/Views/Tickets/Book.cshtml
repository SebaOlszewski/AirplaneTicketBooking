@model Presentation.Models.ViewModels.Tickets.BookTicketViewModel

@{
    ViewData["Title"] = "Book";
}

<h1>Book</h1>

<h4 hidden>BookTicketViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Book" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div id="grid-container">

                @for (int col = 0; col < Model.maxColumn; col++)
                {
                    for (int row = 0; row < Model.maxRow; row++)
                    {
                        <button class="grid-button" data-row="@row" data-col="@col">
                            <img src="/images/seat.png" style="width:30px;height:30px;"/>
                        </button>
                    }
                    <br />
                }
            </div>

            <div class="form-group" style="display: none;">
                <label asp-for="Row" class="control-label"></label>
                <input asp-for="Row" class="form-control" id="rowInput" readonly />
                <span asp-validation-for="Row" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Column" class="control-label"></label>
                <input asp-for="Column" class="form-control" id="colInput" readonly />
                <span asp-validation-for="Column" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="FlightFK" class="control-label"></label>
                <input asp-for="FlightFK" class="form-control" />
                <span asp-validation-for="FlightFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Upload passport image</label>
                <input type="file" name="PassportImage" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PricePaid" class="control-label"></label>
                <input asp-for="PricePaid" class="form-control" />
                <span asp-validation-for="PricePaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListTickets">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var buttons = document.querySelectorAll('.grid-button');
        var rowInput = document.getElementById('rowInput');
        var colInput = document.getElementById('colInput');
        var selectedButton = null;

        buttons.forEach(function (button) {
            button.addEventListener('click', function (event) {
                event.preventDefault(); // Prevent the default click behavior

                var row = this.getAttribute('data-row');
                var col = this.getAttribute('data-col');

                // Set the values of Row and Column inputs
                rowInput.value = row;
                colInput.value = col;

                // Reset the image and selectedButton class for the previously selected button
                if (selectedButton) {
                    selectedButton.classList.remove('selected');
                    selectedButton.innerHTML = '<img src="/images/seat.png" style="width:30px;height:30px;" />';
                }

                // Change the image of the clicked button
                this.classList.add('selected');
                this.innerHTML = '<img src="/images/taken_seat.jpg" style="width:30px;height:30px;" />';

                // Set the current button as the selectedButton
                selectedButton = this;
            });
        });
    });
</script>
